<section class="popular-courses-area section-padding-100-0" style="background-image: url(img/core-img/texture.png);">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="section-heading">
					<h3>Courses offerred by e Tutorials</h3>
					<h4 class='playball'>Improve your skills with practical approach. We are offerring industry experienced experts to provide you the best guidance in the subject. Join us and excel your career in IT industry.</h4>
				</div>
			</div>
		</div>

		<div class="row">
			{% for course in courses %}
				<div class="col-12 col-md-6 col-lg-4">
					<div class="single-popular-course mb-100 wow fadeInUp" data-wow-delay="250ms">
						<img src="/img/course/{{course.thumbnail}}" alt="{{course.name}}">

						<div class="course-content">
							<h4>{{course.name}}</h4>
							<p>{{course.summary}}</p>
						</div>
						<div class="seat-rating-fee d-flex justify-content-between">
							<div class="seat-rating h-100 d-flex align-items-center">
								<div class="seat">
									<i class="fa fa-user" aria-hidden="true"></i>
								</div>
								<div class="rating">
									<i class="fa fa-star" aria-hidden="true"></i>
								</div>
							</div>
							<div class="course-fee h-100">
								<a href="#" class='free'>â‚¹
									{{course.fee}}</a>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</section>
